                                <option value="<%= states[i].id %>" <% if(states[i].id==basic_info[0].state) { %>
                                    selected <% } %> >
                                        <%= states[i].state %>
                                </option>
                                <% } %>
                        </select>
                    </td>
                    <td>
                        <label for="city">City:</label>
