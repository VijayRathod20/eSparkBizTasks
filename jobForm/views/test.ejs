<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table,
        td,
        th {
            margin: auto;
            height: 30px;
            padding: 0%;
            border: 2px solid rgb(33, 80, 48);
            border-collapse: collapse;
        }

        th {
            background-color: rgb(66, 125, 65);
            color: rgb(200, 224, 190);
            font-size: x-large;
        }


        tr:nth-child(even) input,
        tr:nth-child(even) td {

            background-color: rgb(139, 195, 137);

        }

        tr:nth-child(odd) input,
        tr:nth-child(odd) td {

            background-color: rgb(181, 230, 181);

        }

        tr input {
            text-align: center;
            font-weight: bold;
            border: none;
        }

        td {
            text-align: center;
        }

        .saveBtn {

            border: 1px solid rgb(109, 133, 143);
            border-radius: 5px;
            background-color: aqua;
        }

        .btn {
            margin: auto;
            margin-top: 10px;
            width: fit-content;
            text-align: center;
            border: 2px solid rgb(74, 154, 87);
            padding: 5px;
            background-color: rgb(116, 182, 99);
            cursor: pointer;
        }

        .btn:hover {

            border: 2px solid rgb(33, 90, 19);

            background-color: rgb(74, 154, 87);
        }
    </style>
</head>

<body>

    <table id="student">
    </table>
    <div onclick="addStudentField()" class="btn">ADD Data</div>



    <script>
        var n;
        showdata();
        async function showdata() {
            let studentTable = document.getElementById('student');
            studentTable.innerHTML = "";
            var data = await fetch(`http://localhost:7878/getstudent`);
            var stdata = await data.json();
            console.log(stdata);
            studentTable.innerHTML += `<tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>`;
            for (let i = 0; i < stdata.length; i++) {

                n = stdata[i].id;


                studentTable.innerHTML += ` <tr>
                                    <td><input type="text" id="id${stdata[i].id}" value="${stdata[i].id}" name="id" required/></td>
                                    <td><input type="text" id="firstname${stdata[i].id}" value="${stdata[i].first_name}" name="firstname" required/></td>
                                    <td><input type="text" id="lastname${stdata[i].id}" value="${stdata[i].last_name}" name="lastname" required/></td>
                                    <td><input type="text" id="email${stdata[i].id}" value="${stdata[i].gender}" name="email" required/></td>
                                    <td><input type="text" id="collage${stdata[i].id}" value="${stdata[i].email}" name="collage" required/></td>
                                    <td><input type="text" id="city${stdata[i].id}" value="${stdata[i].phone}" name="city" required/></td>
                                    <td><span onclick="updatestudent(${stdata[i].id})" class="saveBtn">Save</span></td>
                                </tr>`;
            }

        }



        function addStudentField() {
            n += 1;
            var tab = document.getElementById("student");
            console.log(tab);
            var trow = tab.insertRow();

            trow.innerHTML = ` <tr>
                                    <td><input type="text" id="id${n}" value="${n}" name="id" required/></td>
                                    <td><input type="text" id="firstname${n}" name="firstname" required/></td>
                                    <td><input type="text" id="lastname${n}" name="lastname" required/></td>
                                    <td><input type="text" id="email${n}" name="email" required/></td>
                                    <td><input type="text" id="collage${n}" name="collage" required/></td>
                                    <td><input type="text" id="city${n}" name="city" required/></td>
                                    <td><span  class="saveBtn" onclick="addStudentData(${n})">Save</span></td>
                                </tr>`;

        }


        async function addStudentData(id) {
            var fname = document.getElementById(`firstname${id}`).value;
            var lname = document.getElementById(`lastname${id}`).value;
            var email = document.getElementById(`email${id}`).value;
            var collage = document.getElementById(`collage${id}`).value;
            var city = document.getElementById(`city${id}`).value;
            var studentData = [];
            studentData.push(fname, lname, email, collage, city);

            await fetch(`http://localhost:7878/addstudent?studentdata=${studentData}`).then(res => res.json()).then(data => {

                showdata();
            })

        }

        async function updatestudent(id) {
            var sid = document.getElementById(`id${id}`).value;
            var fname = document.getElementById(`firstname${id}`).value;
            var lname = document.getElementById(`lastname${id}`).value;
            var email = document.getElementById(`email${id}`).value;
            var collage = document.getElementById(`collage${id}`).value;
            var city = document.getElementById(`city${id}`).value;
            var studentData = [];
            studentData.push(fname, lname, email, collage, city, sid);

            await fetch(`http://localhost:7878/updatestudent?studentdata=${studentData}`);
        

        }


    </script>
</body>

</html>